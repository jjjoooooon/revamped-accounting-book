generator client {
  provider        = "prisma-client-js"
  engineType      = "library"
  // Enable views if you plan to use database views for complex dashboard stats
  previewFeatures = ["views"] 
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  password      String?
  role          String    @default("user")
  status        String    @default("pending")

  // Indexes for admin panel filtering
  @@index([role])
  @@index([status])
}

model Category {
  id               String    @id @default(cuid())
  name             String
  description      String?
  status           String    @default("active")
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  budgetLimit      Float     @default(0)
  color            String?   @default("emerald")
  deletedAt        DateTime?
  deletedByResetId String?
  expenses         Expense[]
  income           Income[]

  @@index([deletedAt])
}

model Expense {
  id               String    @id @default(cuid())
  amount           Float
  description      String?
  date             DateTime  @default(now())
  categoryId       String
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  deletedAt        DateTime?
  deletedByResetId String?
  category         Category  @relation(fields: [categoryId], references: [id])

  @@index([categoryId])
  @@index([date])
  @@index([deletedAt])
}

model Income {
  id               String    @id @default(cuid())
  amount           Float
  description      String?
  date             DateTime  @default(now())
  categoryId       String
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  deletedAt        DateTime?
  deletedByResetId String?
  category         Category  @relation(fields: [categoryId], references: [id])

  @@index([categoryId])
  @@index([date])
  @@index([deletedAt])
}

model Invoice {
  id               String    @id @default(cuid())
  invoiceNo        String    @unique
  amount           Float
  status           String    @default("pending")
  dueDate          DateTime
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  memberId         String
  paidAmount       Float     @default(0)
  period           String?
  type             String    @default("Sanda")
  deletedAt        DateTime?
  deletedByResetId String?
  member           Member    @relation(fields: [memberId], references: [id])
  payments         Payment[]

  @@index([memberId])
  @@index([status])
  @@index([dueDate])
  @@index([type])
  @@index([deletedAt])
}

model Payment {
  id               String       @id @default(cuid())
  invoiceId        String
  amount           Float
  date             DateTime     @default(now())
  method           String
  bankAccountId    String?
  createdAt        DateTime     @default(now())
  deletedAt        DateTime?
  deletedByResetId String?
  bankAccount      BankAccount? @relation(fields: [bankAccountId], references: [id])
  invoice          Invoice      @relation(fields: [invoiceId], references: [id])

  @@index([invoiceId])
  @@index([bankAccountId])
  @@index([date])
  @@index([deletedAt])
}

model Member {
  id               String     @id @default(cuid())
  name             String
  address          String?
  email            String?
  contact          String
  paymentFrequency String     @default("Monthly")
  amountPerCycle   Float      @default(0)
  startDate        DateTime   @default(now())
  profilePicture   String?
  status           String     @default("active")
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  deletedAt        DateTime?
  deletedByResetId String?
  donations        Donation[]
  invoices         Invoice[]

  @@index([status])
  @@index([contact])
  @@index([deletedAt])
}

model Donor {
  id          String     @id @default(cuid())
  name        String
  contact     String?
  email       String?
  address     String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  donations   Donation[]
}

model Donation {
  id               String    @id @default(cuid())
  amount           Float
  date             DateTime  @default(now())
  purpose          String
  paymentMethod    String
  isAnonymous      Boolean   @default(false)
  donorType        String
  donorName        String?
  memberId         String?
  donorId          String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  deletedAt        DateTime?
  deletedByResetId String?
  member           Member?   @relation(fields: [memberId], references: [id])
  donor            Donor?    @relation(fields: [donorId], references: [id])

  @@index([memberId])
  @@index([donorId])
  @@index([date])
  @@index([donorType])
  @@index([deletedAt])
}

model BankAccount {
  id               String    @id @default(cuid())
  bankName         String
  accountName      String
  accountNumber    String
  branch           String?
  type             String
  balance          Float     @default(0)
  status           String    @default("Active")
  color            String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  deletedAt        DateTime?
  deletedByResetId String?
  transactions     Ledger[]
  payments         Payment[]

  @@index([deletedAt])
}

model Ledger {
  id               String       @id @default(cuid())
  date             DateTime     @default(now())
  description      String
  amount           Float
  type             String
  category         String?
  bankAccountId    String?
  referenceId      String?
  referenceType    String?
  createdAt        DateTime     @default(now())
  deletedAt        DateTime?
  deletedByResetId String?
  bankAccount      BankAccount? @relation(fields: [bankAccountId], references: [id])

  @@index([bankAccountId])
  @@index([date])
  @@index([type])
  @@index([referenceType, referenceId])
  @@index([deletedAt])
}

model AuditLog {
  id         String   @id @default(cuid())
  timestamp  DateTime @default(now())
  userId     String?
  userName   String?
  action     String
  entityType String
  entityId   String
  entityName String?
  changes    Json?
  ipAddress  String?
  userAgent  String?

  @@index([entityType, entityId])
  @@index([userId])
  @@index([timestamp])
  @@index([action])
}

model AppSettings {
  id              String   @id @default(cuid())
  appName         String   @default("Masjid Accounting System")
  appVersion      String   @default("1.0.0")
  footerText      String   @default("Developed By: Inzeedo (PVT) Ltd.")
  footerCopyright String   @default("Â© 2025 All Rights Reserved")
  showFooter      Boolean  @default(true)
  
  // Organization Profile
  mosqueName      String   @default("Al-Manar Grand Mosque")
  logo            String?  // Base64 or URL
  regNo           String?  @default("MQ/2023/885")
  email           String?  @default("admin@almanar.lk")
  phone           String?  @default("+94 77 123 4567")
  address         String?  @default("123 Mosque Road, Kandy, Sri Lanka")
  
  // Financial Config
  currency        String   @default("LKR")
  fiscalYearStart String   @default("January")
  autoBillDate    String   @default("1")
  receiptFooter   String?  @default("Jazakallahu Khairan. May Allah accept your deeds.")
  
  // Notifications
  smsEnabled      Boolean  @default(true)
  emailEnabled    Boolean  @default(false)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("app_settings")
}

model ResetRequest {
  id           String    @id @default(cuid())
  userId       String
  userName     String
  reason       String?
  status       String    @default("pending") // pending, restored, expired, deleted
  autoDeleteAt DateTime  // 7 days from creation
  createdAt    DateTime  @default(now())
  restoredAt   DateTime?
  deletedAt    DateTime?

  @@index([status])
  @@index([autoDeleteAt])
}

model AdminNotification {
  id        String   @id @default(cuid())
  type      String   // RESET_REQUEST, CONTACT_FORM, etc.
  title     String
  message   String
  isRead    Boolean  @default(false)
  data      Json?
  createdAt DateTime @default(now())

  @@index([isRead])
  @@index([type])
}